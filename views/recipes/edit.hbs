<h3>Edit Recipe</h3>
<div class="row">
    <form method="POST" action="/recipes/{{recipe._id}}?_method=PUT" class="col s12">
        {{!-- <input type="hidden" name="_method" value="PUT"> --}}
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{recipe.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    {{!-- select helper, pass in recipe.status as argument --}}
                    {{#select recipe.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Is there a story behind this recipe?</h5>
                <textarea id="body" name="body">{{recipe.body}}</textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>